	<install for="2.1 RC2, 2.1 RC3, 2.1 - 2.1.99">
		<credits url="https://dragomano.ru/mods/likes-aka-karma" license="MIT" copyright="2018-2019">Likes aka Karma</credits>
		<require-dir name="Sources" destination="$boarddir" />
		<hook hook="integrate_pre_load" function="LikesAkaKarma::hooks" file="$sourcedir/Class-LikesAkaKarma.php" />
		<database>install.php</database>
	</install>

	<uninstall for="2.1 RC2, 2.1 RC3, 2.1 - 2.1.99">
